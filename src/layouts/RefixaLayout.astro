---
interface Props {
    title: string;
    description?: string;
    docId?: string;
    classification?: string;
}

const { title, description = 'REFIXA Technical Documentation', docId, classification = 'Internal' } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content={description}>
    <title>{title} // REFIXA</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@400;500;600&family=IBM+Plex+Mono&display=swap" rel="stylesheet">
</head>
<body>
    <header class="header">
        <div class="header-left">
            <a href="/refixa" class="logo">
                <div class="logo-symbol"></div>
                <span>REFIXA</span>
            </a>
            <nav class="nav">
                <a href="/refixa">Overview</a>
                <a href="/">CycleTree</a>
            </nav>
        </div>
        <div class="header-right">
            <span class="session">RF // FOUNDATION</span>
        </div>
    </header>

    <div class="container">
        <aside class="sidebar">
            <div class="sidebar-section">
                <div class="sidebar-title">Organization</div>
                <ul class="sidebar-menu">
                    <li><a href="/refixa">Overview</a></li>
                    <li><a href="/refixa#values">Values</a></li>
                    <li><a href="/refixa#projects">Projects</a></li>
                </ul>
            </div>
            <div class="sidebar-divider"></div>
            <div class="sidebar-section">
                <div class="sidebar-title">Related</div>
                <ul class="sidebar-menu">
                    <li><a href="/anag">ANAG</a></li>
                    <li><a href="/frexida">Frexida</a></li>
                    <li><a href="/mtdnot">mtdnot</a></li>
                </ul>
            </div>
        </aside>

        <main class="main">
            <div class="doc-header">
                <div class="doc-classification">{classification}</div>
                <h1 class="doc-title">{title}</h1>
                {docId && <div class="doc-meta">DOC-ID: {docId}</div>}
            </div>
            
            <slot />
        </main>
    </div>

    <footer class="footer">
        REFIXA-INTERNAL // Â© 2026
    </footer>
</body>
</html>

<style is:global>
    :root {
        --bg-primary: #0d0d0d;
        --bg-secondary: #111111;
        --bg-tertiary: #161616;
        --border: #1f1f1f;
        --border-light: #2a2a2a;
        --text-primary: #e0e0e0;
        --text-secondary: #888888;
        --text-muted: #555555;
        --text-dark: #333333;
        --accent: #8b5cf6;
        --accent-dim: #6d45d1;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: var(--bg-primary);
        color: var(--text-primary);
        font-family: 'IBM Plex Sans', -apple-system, sans-serif;
        font-size: 15px;
        line-height: 1.7;
        min-height: 100vh;
    }

    a {
        color: var(--accent);
        text-decoration: none;
        transition: color 0.15s ease;
    }

    a:hover {
        color: var(--text-primary);
    }

    /* Content Styles */
    h2 {
        font-size: 16px;
        font-weight: 600;
        color: var(--text-muted);
        letter-spacing: 2px;
        text-transform: uppercase;
        margin: 32px 0 12px;
        padding-bottom: 8px;
        border-bottom: 1px solid var(--border);
    }

    h3 {
        font-size: 15px;
        font-weight: 600;
        color: var(--text-primary);
        margin: 24px 0 8px;
    }

    p {
        color: var(--text-secondary);
        margin-bottom: 12px;
    }

    ul, ol {
        margin-bottom: 16px;
        padding-left: 20px;
        color: var(--text-secondary);
    }

    li {
        margin-bottom: 6px;
    }

    strong {
        color: var(--text-primary);
        font-weight: 500;
    }

    code {
        font-family: 'IBM Plex Mono', monospace;
        background: var(--bg-tertiary);
        padding: 2px 6px;
        border-radius: 3px;
        font-size: 0.9em;
    }

    blockquote {
        border-left: 3px solid var(--accent);
        padding-left: 16px;
        margin: 16px 0;
        color: var(--text-muted);
        font-style: italic;
    }

    ::selection {
        background: rgba(139, 92, 246, 0.3);
        color: var(--text-primary);
    }
</style>

<style>
    .header {
        background: var(--bg-secondary);
        border-bottom: 1px solid var(--border);
        padding: 0 24px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        position: sticky;
        top: 0;
        z-index: 100;
    }

    .header-left {
        display: flex;
        align-items: center;
        gap: 24px;
    }

    .logo {
        display: flex;
        align-items: center;
        gap: 10px;
        font-weight: 600;
        font-size: 13px;
        letter-spacing: 3px;
        color: var(--text-primary);
        text-decoration: none;
    }

    .logo:hover {
        color: var(--text-primary);
    }

    .logo-symbol {
        width: 20px;
        height: 20px;
        border: 2px solid var(--accent);
        border-radius: 50%;
        position: relative;
    }

    .logo-symbol::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 6px;
        height: 6px;
        background: var(--accent);
        border-radius: 50%;
    }

    .nav {
        display: flex;
        gap: 4px;
    }

    .nav a {
        color: var(--text-secondary);
        text-decoration: none;
        font-size: 12px;
        padding: 6px 12px;
        border-radius: 4px;
        transition: all 0.15s ease;
    }

    .nav a:hover {
        color: var(--text-primary);
        background: var(--bg-tertiary);
    }

    .header-right {
        font-size: 11px;
        color: var(--text-muted);
        font-family: 'IBM Plex Mono', monospace;
    }

    .container {
        display: flex;
        min-height: calc(100vh - 48px - 48px);
    }

    .sidebar {
        width: 200px;
        background: var(--bg-secondary);
        border-right: 1px solid var(--border);
        padding: 24px 0;
        flex-shrink: 0;
    }

    @media (max-width: 768px) {
        .sidebar {
            display: none;
        }
    }

    .sidebar-section {
        margin-bottom: 24px;
    }

    .sidebar-title {
        font-size: 9px;
        font-weight: 600;
        letter-spacing: 2px;
        color: var(--text-dark);
        text-transform: uppercase;
        padding: 0 20px;
        margin-bottom: 8px;
    }

    .sidebar-menu {
        list-style: none;
        padding: 0;
    }

    .sidebar-menu li {
        margin: 0;
    }

    .sidebar-menu a {
        display: block;
        padding: 8px 20px;
        color: var(--text-secondary);
        text-decoration: none;
        font-size: 13px;
        border-left: 2px solid transparent;
        transition: all 0.15s ease;
    }

    .sidebar-menu a:hover {
        color: var(--text-primary);
        background: var(--bg-tertiary);
        border-left-color: var(--border-light);
    }

    .sidebar-divider {
        height: 1px;
        background: var(--border);
        margin: 16px 20px;
    }

    .main {
        flex: 1;
        padding: 32px 40px;
        max-width: 720px;
    }

    .doc-header {
        margin-bottom: 32px;
        padding-bottom: 20px;
        border-bottom: 1px solid var(--border);
    }

    .doc-classification {
        display: inline-flex;
        font-size: 10px;
        font-weight: 600;
        letter-spacing: 2px;
        color: var(--accent);
        text-transform: uppercase;
        margin-bottom: 12px;
        padding: 4px 10px;
        background: rgba(139, 92, 246, 0.1);
        border: 1px solid rgba(139, 92, 246, 0.2);
        border-radius: 3px;
    }

    .doc-title {
        font-size: 26px;
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 8px;
        letter-spacing: -0.5px;
    }

    .doc-meta {
        font-size: 11px;
        color: var(--text-dark);
        font-family: 'IBM Plex Mono', monospace;
    }

    .footer {
        background: var(--bg-secondary);
        border-top: 1px solid var(--border);
        padding: 16px 24px;
        font-size: 10px;
        color: var(--text-dark);
        font-family: 'IBM Plex Mono', monospace;
        text-align: center;
    }
</style>
