---
interface Props {
    title: string;
    description?: string;
    docId?: string;
    classification?: string;
    revision?: string;
}

const { 
    title, 
    description = 'REFIXA Technical Documentation', 
    docId = 'RF-XXX-000',
    classification = 'INTERNAL',
    revision = '001'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content={description}>
    <title>{docId} // REFIXA</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;500;600&display=swap" rel="stylesheet">
</head>
<body>
    <div class="frame">
        <!-- 左構造線 -->
        <div class="structure-left">
            <div class="structure-line"></div>
            <div class="structure-markers">
                <span>001</span>
                <span>002</span>
                <span>003</span>
                <span>004</span>
            </div>
        </div>

        <!-- メイン領域 -->
        <div class="main-area">
            <!-- ヘッダーバー -->
            <header class="header-bar">
                <div class="header-left">
                    <div class="org-mark">
                        <div class="mark-outer"></div>
                        <div class="mark-inner"></div>
                    </div>
                    <div class="org-id">
                        <span class="org-name">REFIXA</span>
                        <span class="org-division">ENGINEERING DIVISION</span>
                    </div>
                </div>
                <div class="header-right">
                    <div class="status-block">
                        <span class="status-label">STATUS</span>
                        <span class="status-value online">OPERATIONAL</span>
                    </div>
                </div>
            </header>

            <!-- ドキュメント情報バー -->
            <div class="doc-info-bar">
                <div class="doc-info-item">
                    <span class="info-label">DOC</span>
                    <span class="info-value">{docId}</span>
                </div>
                <div class="doc-info-item">
                    <span class="info-label">CLASS</span>
                    <span class="info-value classification">{classification}</span>
                </div>
                <div class="doc-info-item">
                    <span class="info-label">REV</span>
                    <span class="info-value">{revision}</span>
                </div>
                <div class="doc-info-item">
                    <span class="info-label">DATE</span>
                    <span class="info-value">{new Date().toISOString().split('T')[0].replace(/-/g, '.')}</span>
                </div>
            </div>

            <!-- コンテンツ -->
            <main class="content">
                <div class="content-header">
                    <div class="title-block">
                        <h1 class="doc-title">{title}</h1>
                    </div>
                </div>

                <div class="content-body">
                    <slot />
                </div>
            </main>

            <!-- フッター -->
            <footer class="footer-bar">
                <div class="footer-left">
                    <span>RF // FOUNDATION</span>
                </div>
                <div class="footer-center">
                    <span>INTERNAL USE ONLY</span>
                </div>
                <div class="footer-right">
                    <span>PAGE 001/001</span>
                </div>
            </footer>
        </div>

        <!-- 右構造線 -->
        <div class="structure-right">
            <div class="structure-line"></div>
        </div>
    </div>
</body>
</html>

<style is:global>
    :root {
        --bg: #08080a;
        --bg-panel: #0c0c0e;
        --bg-element: #101014;
        --border: #1a1a1f;
        --border-accent: #2a2a32;
        --text-primary: #d0d0d8;
        --text-secondary: #707078;
        --text-muted: #404048;
        --text-dark: #252528;
        --accent: #8b5cf6;
        --accent-dim: rgba(139, 92, 246, 0.3);
        --online: #4ade80;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: var(--bg);
        color: var(--text-primary);
        font-family: 'IBM Plex Mono', monospace;
        font-size: 13px;
        line-height: 1.6;
        min-height: 100vh;
    }

    a {
        color: var(--accent);
        text-decoration: none;
    }

    a:hover {
        color: var(--text-primary);
    }

    /* Content Typography */
    h2 {
        font-size: 11px;
        font-weight: 600;
        color: var(--text-muted);
        letter-spacing: 3px;
        text-transform: uppercase;
        margin: 40px 0 16px;
        padding: 8px 0;
        border-top: 1px solid var(--border);
        border-bottom: 1px solid var(--border);
        display: flex;
        align-items: center;
        gap: 12px;
    }

    h2::before {
        content: '▶';
        font-size: 8px;
        color: var(--accent);
    }

    h3 {
        font-size: 12px;
        font-weight: 500;
        color: var(--text-secondary);
        letter-spacing: 1px;
        margin: 24px 0 8px;
    }

    p {
        color: var(--text-secondary);
        margin-bottom: 12px;
        font-size: 13px;
    }

    ul, ol {
        margin-bottom: 16px;
        padding-left: 20px;
        color: var(--text-secondary);
    }

    li {
        margin-bottom: 6px;
    }

    li::marker {
        color: var(--text-muted);
    }

    strong {
        color: var(--text-primary);
        font-weight: 500;
    }

    code {
        background: var(--bg-element);
        border: 1px solid var(--border);
        padding: 2px 6px;
        font-size: 12px;
    }

    blockquote {
        border-left: 2px solid var(--accent);
        padding-left: 16px;
        margin: 16px 0;
        color: var(--text-muted);
    }
</style>

<style>
    .frame {
        display: flex;
        min-height: 100vh;
    }

    /* 構造線 - 左 */
    .structure-left {
        width: 48px;
        background: var(--bg-panel);
        border-right: 1px solid var(--border);
        position: relative;
        flex-shrink: 0;
        display: flex;
        flex-direction: column;
    }

    .structure-line {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 50%;
        width: 1px;
        background: linear-gradient(
            to bottom,
            transparent 0%,
            var(--border-accent) 10%,
            var(--border-accent) 90%,
            transparent 100%
        );
    }

    .structure-markers {
        display: flex;
        flex-direction: column;
        gap: 100px;
        padding-top: 100px;
        align-items: center;
        font-size: 8px;
        color: var(--text-dark);
        letter-spacing: 1px;
    }

    /* 構造線 - 右 */
    .structure-right {
        width: 32px;
        background: var(--bg-panel);
        border-left: 1px solid var(--border);
        position: relative;
        flex-shrink: 0;
    }

    /* メイン領域 */
    .main-area {
        flex: 1;
        display: flex;
        flex-direction: column;
        max-width: 900px;
    }

    /* ヘッダーバー */
    .header-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 16px 24px;
        background: var(--bg-panel);
        border-bottom: 1px solid var(--border);
    }

    .header-left {
        display: flex;
        align-items: center;
        gap: 16px;
    }

    .org-mark {
        width: 32px;
        height: 32px;
        position: relative;
    }

    .mark-outer {
        width: 100%;
        height: 100%;
        border: 2px solid var(--accent);
        border-radius: 50%;
    }

    .mark-inner {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 10px;
        height: 10px;
        background: var(--accent);
        border-radius: 50%;
    }

    .org-id {
        display: flex;
        flex-direction: column;
        gap: 2px;
    }

    .org-name {
        font-size: 14px;
        font-weight: 600;
        letter-spacing: 4px;
        color: var(--text-primary);
    }

    .org-division {
        font-size: 9px;
        letter-spacing: 2px;
        color: var(--text-muted);
    }

    .header-right {
        display: flex;
        align-items: center;
    }

    .status-block {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        gap: 2px;
    }

    .status-label {
        font-size: 8px;
        letter-spacing: 2px;
        color: var(--text-dark);
    }

    .status-value {
        font-size: 10px;
        letter-spacing: 1px;
        padding: 2px 8px;
        background: var(--bg-element);
        border: 1px solid var(--border);
    }

    .status-value.online {
        color: var(--online);
        border-color: rgba(74, 222, 128, 0.2);
    }

    /* ドキュメント情報バー */
    .doc-info-bar {
        display: flex;
        gap: 32px;
        padding: 12px 24px;
        background: var(--bg-element);
        border-bottom: 1px solid var(--border);
    }

    .doc-info-item {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .info-label {
        font-size: 9px;
        letter-spacing: 1px;
        color: var(--text-dark);
    }

    .info-value {
        font-size: 11px;
        color: var(--text-secondary);
    }

    .info-value.classification {
        color: var(--accent);
        padding: 1px 6px;
        background: var(--accent-dim);
        border: 1px solid rgba(139, 92, 246, 0.3);
    }

    /* コンテンツ */
    .content {
        flex: 1;
        padding: 32px 24px;
    }

    .content-header {
        margin-bottom: 32px;
        padding-bottom: 24px;
        border-bottom: 1px solid var(--border);
    }

    .doc-title {
        font-size: 22px;
        font-weight: 600;
        letter-spacing: 2px;
        color: var(--text-primary);
    }

    .content-body {
        max-width: 640px;
    }

    /* フッターバー */
    .footer-bar {
        display: flex;
        justify-content: space-between;
        padding: 12px 24px;
        background: var(--bg-panel);
        border-top: 1px solid var(--border);
        font-size: 9px;
        letter-spacing: 2px;
        color: var(--text-dark);
    }
</style>
