---
interface Props {
    title: string;
    section?: string;
    showSidebar?: boolean;
}

const { title, section = 'Overview', showSidebar = true } = Astro.props;

const navigation = [
    {
        label: 'ANAGについて',
        href: '/anag',
        children: [
            { label: '概要', href: '/anag' },
            { label: '設立理念', href: '/anag#mission' },
            { label: '組織構造', href: '/anag#structure' },
        ]
    },
    {
        label: '研究活動',
        href: '/anag-research',
        children: [
            { label: 'Project EPS', href: '/anag-research#eps' },
            { label: '電離圏研究', href: '/anag-research#ionosphere' },
            { label: '長寿研究', href: '/anag-research#longevity' },
        ]
    },
    {
        label: '組織',
        href: '/anag-organization',
        children: [
            { label: 'エージェント', href: '/anag-organization#agents' },
            { label: '部門', href: '/anag-organization#divisions' },
        ]
    },
    {
        label: 'アーカイブ',
        href: '/anag-archive',
        children: [
            { label: '文書一覧', href: '/anag-archive' },
            { label: '報告書', href: '/anag-archive#reports' },
        ]
    },
];

const sideNavItems = [
    { label: '概要', href: '/anag' },
    { label: '設立理念', href: '/anag#mission' },
    { label: '組織構造', href: '/anag#structure' },
    { label: '関連組織', href: '/anag#related' },
];
---

<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title} | ANAG</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700&family=IBM+Plex+Mono:wght@400;500&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Top Bar -->
    <div class="top-bar">
        <div class="top-bar-inner">
            <div class="top-bar-left">
                <span class="clearance">CLEARANCE LEVEL 3+ REQUIRED</span>
            </div>
            <div class="top-bar-right">
                <span>INTERNAL ACCESS ONLY</span>
            </div>
        </div>
    </div>

    <!-- Header -->
    <header class="header">
        <div class="header-inner">
            <a href="/anag" class="logo">
                <div class="logo-mark">
                    <svg viewBox="0 0 40 40" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="20" cy="20" r="18"/>
                        <circle cx="20" cy="20" r="10"/>
                        <circle cx="20" cy="20" r="3" fill="currentColor"/>
                    </svg>
                </div>
                <div class="logo-text">
                    <span class="logo-name">ANAG</span>
                    <span class="logo-full">Anti-Aging Research Foundation</span>
                </div>
            </a>
            
            <nav class="main-nav">
                {navigation.map((item) => (
                    <div class="nav-item">
                        <a href={item.href} class="nav-link">{item.label}</a>
                        {item.children && (
                            <div class="mega-menu">
                                <div class="mega-menu-inner">
                                    <div class="mega-menu-section">
                                        <div class="mega-menu-title">{item.label}</div>
                                        <ul class="mega-menu-list">
                                            {item.children.map((child) => (
                                                <li>
                                                    <a href={child.href}>
                                                        {child.label}
                                                        <span class="arrow">›</span>
                                                    </a>
                                                </li>
                                            ))}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        )}
                    </div>
                ))}
            </nav>
        </div>
    </header>

    <!-- Page Header -->
    <div class="page-header">
        <div class="page-header-inner">
            <div class="breadcrumb">
                <a href="/">CycleTree</a>
                <span>/</span>
                <a href="/anag">ANAG</a>
                <span>/</span>
                <span class="current">{section}</span>
            </div>
            <h1 class="page-title">{title}</h1>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-container">
        <div class="main-inner">
            <main class="content">
                <slot />
            </main>
            
            {showSidebar && (
                <aside class="sidebar">
                    <nav class="side-nav">
                        <div class="side-nav-title">このセクション</div>
                        <ul class="side-nav-list">
                            {sideNavItems.map((item) => (
                                <li>
                                    <a href={item.href}>
                                        {item.label}
                                        <span class="arrow">›</span>
                                    </a>
                                </li>
                            ))}
                        </ul>
                    </nav>
                </aside>
            )}
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-inner">
            <div class="footer-left">
                <span class="footer-logo">ANAG</span>
                <span class="footer-text">Anti-Aging Research Foundation</span>
            </div>
            <div class="footer-right">
                <span>INTERNAL DOCUMENT // ACCESS LOGGED</span>
            </div>
        </div>
    </footer>
</body>
</html>

<style is:global>
    :root {
        --bg: #2d2d2d;
        --bg-darker: #252525;
        --bg-darkest: #1a1a1a;
        --bg-light: #3a3a3a;
        --border: #404040;
        --border-light: #4a4a4a;
        --text: #e8e8e8;
        --text-secondary: #b0b0b0;
        --text-muted: #808080;
        --accent: #d0d0d0;
        --accent-hover: #ffffff;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: var(--bg);
        color: var(--text);
        font-family: 'Noto Sans JP', sans-serif;
        font-size: 14px;
        line-height: 1.8;
        min-height: 100vh;
    }

    a {
        color: var(--accent);
        text-decoration: none;
        transition: color 0.15s;
    }

    a:hover {
        color: var(--accent-hover);
    }

    h2 {
        font-size: 18px;
        font-weight: 700;
        color: var(--text);
        margin: 40px 0 20px;
        padding-bottom: 12px;
        border-bottom: 1px solid var(--border);
    }

    h3 {
        font-size: 15px;
        font-weight: 700;
        color: var(--text);
        margin: 28px 0 12px;
    }

    p {
        margin-bottom: 16px;
        color: var(--text-secondary);
    }

    ul, ol {
        margin-bottom: 16px;
        padding-left: 24px;
        color: var(--text-secondary);
    }

    li {
        margin-bottom: 8px;
    }

    strong {
        color: var(--text);
        font-weight: 500;
    }
</style>

<style>
    /* Top Bar */
    .top-bar {
        background: var(--bg-darkest);
        border-bottom: 1px solid var(--border);
        font-size: 11px;
        font-family: 'IBM Plex Mono', monospace;
    }

    .top-bar-inner {
        max-width: 1200px;
        margin: 0 auto;
        padding: 8px 32px;
        display: flex;
        justify-content: space-between;
        color: var(--text-muted);
    }

    .clearance {
        color: var(--text-secondary);
    }

    /* Header */
    .header {
        background: var(--bg-darker);
        border-bottom: 1px solid var(--border);
    }

    .header-inner {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 32px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        height: 72px;
    }

    .logo {
        display: flex;
        align-items: center;
        gap: 12px;
        color: var(--text);
        text-decoration: none;
    }

    .logo:hover {
        color: var(--text);
    }

    .logo-mark {
        width: 40px;
        height: 40px;
        color: var(--accent);
    }

    .logo-text {
        display: flex;
        flex-direction: column;
    }

    .logo-name {
        font-size: 20px;
        font-weight: 700;
        letter-spacing: 2px;
    }

    .logo-full {
        font-size: 10px;
        color: var(--text-muted);
        letter-spacing: 0.5px;
    }

    /* Main Nav */
    .main-nav {
        display: flex;
        height: 100%;
    }

    .nav-item {
        position: relative;
        height: 100%;
        display: flex;
        align-items: center;
    }

    .nav-link {
        padding: 0 20px;
        height: 100%;
        display: flex;
        align-items: center;
        color: var(--text-secondary);
        font-size: 14px;
        font-weight: 500;
        border-bottom: 3px solid transparent;
        transition: all 0.15s;
    }

    .nav-link:hover {
        color: var(--text);
        background: var(--bg-light);
    }

    .nav-item:hover .nav-link {
        border-bottom-color: var(--accent);
    }

    /* Mega Menu */
    .mega-menu {
        position: absolute;
        top: 100%;
        left: 0;
        background: var(--bg-darker);
        border: 1px solid var(--border);
        border-top: none;
        min-width: 240px;
        opacity: 0;
        visibility: hidden;
        transform: translateY(-8px);
        transition: all 0.2s ease;
        z-index: 100;
    }

    .nav-item:hover .mega-menu {
        opacity: 1;
        visibility: visible;
        transform: translateY(0);
    }

    .mega-menu-inner {
        padding: 20px;
    }

    .mega-menu-title {
        font-size: 11px;
        font-weight: 700;
        color: var(--text-muted);
        letter-spacing: 1px;
        text-transform: uppercase;
        margin-bottom: 12px;
    }

    .mega-menu-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .mega-menu-list li {
        margin: 0;
    }

    .mega-menu-list a {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 12px;
        color: var(--text-secondary);
        font-size: 14px;
        border-radius: 4px;
        transition: all 0.15s;
    }

    .mega-menu-list a:hover {
        background: var(--bg-light);
        color: var(--text);
    }

    .arrow {
        color: var(--text-muted);
        font-size: 16px;
    }

    /* Page Header */
    .page-header {
        background: var(--bg-darker);
        border-bottom: 1px solid var(--border);
        padding: 32px 0;
    }

    .page-header-inner {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 32px;
    }

    .breadcrumb {
        font-size: 12px;
        color: var(--text-muted);
        margin-bottom: 12px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .breadcrumb a {
        color: var(--text-muted);
    }

    .breadcrumb a:hover {
        color: var(--accent);
    }

    .breadcrumb .current {
        color: var(--text-secondary);
    }

    .page-title {
        font-size: 28px;
        font-weight: 700;
        color: var(--text);
        letter-spacing: -0.5px;
    }

    /* Main Container */
    .main-container {
        padding: 40px 0;
    }

    .main-inner {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 32px;
        display: flex;
        gap: 48px;
    }

    .content {
        flex: 1;
        min-width: 0;
    }

    /* Sidebar */
    .sidebar {
        width: 240px;
        flex-shrink: 0;
    }

    .side-nav {
        position: sticky;
        top: 24px;
    }

    .side-nav-title {
        font-size: 11px;
        font-weight: 700;
        color: var(--text-muted);
        letter-spacing: 1px;
        text-transform: uppercase;
        margin-bottom: 12px;
        padding-bottom: 8px;
        border-bottom: 1px solid var(--border);
    }

    .side-nav-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .side-nav-list li {
        margin: 0;
        border-bottom: 1px solid var(--border);
    }

    .side-nav-list a {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px 0;
        color: var(--text-secondary);
        font-size: 14px;
    }

    .side-nav-list a:hover {
        color: var(--text);
    }

    /* Footer */
    .footer {
        background: var(--bg-darkest);
        border-top: 1px solid var(--border);
        margin-top: 48px;
    }

    .footer-inner {
        max-width: 1200px;
        margin: 0 auto;
        padding: 24px 32px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .footer-left {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .footer-logo {
        font-size: 14px;
        font-weight: 700;
        color: var(--text);
        letter-spacing: 2px;
    }

    .footer-text {
        font-size: 11px;
        color: var(--text-muted);
    }

    .footer-right {
        font-size: 10px;
        font-family: 'IBM Plex Mono', monospace;
        color: var(--text-muted);
    }
</style>
