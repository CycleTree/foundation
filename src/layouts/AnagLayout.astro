---
interface Props {
    title: string;
    itemNumber?: string;
    objectClass?: string;
    clearanceLevel?: number;
}

const { 
    title, 
    itemNumber = 'ANAG-001',
    objectClass = 'THAUMIEL',
    clearanceLevel = 4
} = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{itemNumber} // ANAG Foundation</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@400;500;600;700&family=IBM+Plex+Mono:wght@400;500&display=swap" rel="stylesheet">
</head>
<body>
    <header class="top-bar">
        <div class="logo-area">
            <div class="logo-emblem">
                <svg viewBox="0 0 100 100" class="logo-svg">
                    <circle cx="50" cy="50" r="45" fill="none" stroke="currentColor" stroke-width="3"/>
                    <circle cx="50" cy="50" r="30" fill="none" stroke="currentColor" stroke-width="2"/>
                    <circle cx="50" cy="50" r="8" fill="currentColor"/>
                    <line x1="50" y1="5" x2="50" y2="20" stroke="currentColor" stroke-width="2"/>
                    <line x1="50" y1="80" x2="50" y2="95" stroke="currentColor" stroke-width="2"/>
                    <line x1="5" y1="50" x2="20" y2="50" stroke="currentColor" stroke-width="2"/>
                    <line x1="80" y1="50" x2="95" y2="50" stroke="currentColor" stroke-width="2"/>
                </svg>
            </div>
            <div class="logo-text">
                <span class="org-name">ANAG FOUNDATION</span>
                <span class="org-motto">SECURE · CONTAIN · TRANSCEND</span>
            </div>
        </div>
        <nav class="nav-bar">
            <a href="/anag">Database</a>
            <a href="/">CycleTree</a>
        </nav>
    </header>

    <div class="clearance-bar">
        <span class="clearance-warning">⚠ CLASSIFIED DOCUMENT</span>
        <span class="clearance-level">LEVEL {clearanceLevel} CLEARANCE REQUIRED</span>
    </div>

    <main class="document">
        <div class="doc-header">
            <div class="item-box">
                <div class="item-label">ITEM #</div>
                <div class="item-number">{itemNumber}</div>
            </div>
            <div class="class-box">
                <div class="class-label">OBJECT CLASS</div>
                <div class="class-value">{objectClass}</div>
            </div>
        </div>

        <article class="doc-content">
            <slot />
        </article>
    </main>

    <footer class="footer">
        <div class="footer-content">
            <span>ANAG FOUNDATION // ANTI-AGING RESEARCH DIVISION</span>
            <span>ACCESS LOGGED // {new Date().toISOString()}</span>
        </div>
    </footer>
</body>
</html>

<style is:global>
    :root {
        --bg: #0a0908;
        --bg-panel: #0f0e0c;
        --bg-box: #080807;
        --border: #1a1815;
        --border-accent: #2a2620;
        --text: #e8e4df;
        --text-secondary: #9a958d;
        --text-muted: #5a564f;
        --text-dark: #3a3632;
        --accent: #8b1a1a;
        --accent-bright: #a82828;
        --accent-dim: rgba(139, 26, 26, 0.2);
        --gold: #b8860b;
        --gold-dim: rgba(184, 134, 11, 0.15);
        --warning: #b8860b;
        --danger: #8b1a1a;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: var(--bg);
        color: var(--text);
        font-family: 'IBM Plex Sans', sans-serif;
        font-size: 14px;
        line-height: 1.7;
        min-height: 100vh;
    }

    a {
        color: var(--accent);
        text-decoration: none;
    }

    a:hover {
        text-decoration: underline;
    }

    /* Document Typography */
    h2 {
        font-size: 13px;
        font-weight: 700;
        letter-spacing: 2px;
        text-transform: uppercase;
        color: var(--text);
        margin: 32px 0 16px;
        padding: 12px 16px;
        background: var(--bg-panel);
        border-left: 4px solid var(--accent);
    }

    h3 {
        font-size: 14px;
        font-weight: 600;
        color: var(--text);
        margin: 24px 0 12px;
    }

    p {
        margin-bottom: 14px;
        color: var(--text-secondary);
    }

    ul, ol {
        margin-bottom: 16px;
        padding-left: 24px;
        color: var(--text-secondary);
    }

    li {
        margin-bottom: 8px;
    }

    strong {
        color: var(--text);
        font-weight: 600;
    }

    code {
        font-family: 'IBM Plex Mono', monospace;
        background: var(--bg-box);
        border: 1px solid var(--border);
        padding: 2px 6px;
        font-size: 13px;
    }

    blockquote {
        background: var(--bg-box);
        border: 1px solid var(--border);
        border-left: 4px solid var(--accent);
        padding: 16px;
        margin: 16px 0;
        color: var(--text-secondary);
        font-style: italic;
    }

    /* Redacted Text */
    .redacted {
        background: var(--text-dark);
        color: var(--text-dark);
        padding: 0 4px;
        user-select: none;
    }

    /* Warning Box */
    .warning-box {
        background: rgba(234, 179, 8, 0.1);
        border: 1px solid rgba(234, 179, 8, 0.3);
        border-left: 4px solid var(--warning);
        padding: 16px;
        margin: 16px 0;
        font-size: 13px;
    }

    .warning-box strong {
        color: var(--warning);
    }

    /* Info Box */
    .info-box {
        background: var(--accent-dim);
        border: 1px solid rgba(220, 38, 38, 0.3);
        border-left: 4px solid var(--accent);
        padding: 16px;
        margin: 16px 0;
    }
</style>

<style>
    .top-bar {
        background: var(--bg-panel);
        border-bottom: 1px solid var(--border);
        padding: 16px 32px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .logo-area {
        display: flex;
        align-items: center;
        gap: 16px;
    }

    .logo-emblem {
        width: 48px;
        height: 48px;
        color: var(--gold);
    }

    .logo-svg {
        width: 100%;
        height: 100%;
    }

    .logo-text {
        display: flex;
        flex-direction: column;
        gap: 2px;
    }

    .org-name {
        font-size: 16px;
        font-weight: 700;
        letter-spacing: 3px;
        color: var(--text);
    }

    .org-motto {
        font-size: 9px;
        letter-spacing: 2px;
        color: var(--text-muted);
    }

    .nav-bar {
        display: flex;
        gap: 24px;
    }

    .nav-bar a {
        font-size: 12px;
        color: var(--text-secondary);
        text-decoration: none;
        letter-spacing: 1px;
    }

    .nav-bar a:hover {
        color: var(--accent);
    }

    .clearance-bar {
        background: linear-gradient(90deg, var(--bg-box) 0%, rgba(234, 179, 8, 0.1) 50%, var(--bg-box) 100%);
        border-bottom: 1px solid var(--border);
        padding: 8px 32px;
        display: flex;
        justify-content: space-between;
        font-size: 11px;
        font-family: 'IBM Plex Mono', monospace;
        letter-spacing: 1px;
    }

    .clearance-warning {
        color: var(--warning);
    }

    .clearance-level {
        color: var(--text-muted);
    }

    .document {
        max-width: 800px;
        margin: 0 auto;
        padding: 32px;
    }

    .doc-header {
        display: flex;
        gap: 24px;
        margin-bottom: 32px;
        padding-bottom: 24px;
        border-bottom: 2px solid var(--border);
    }

    .item-box, .class-box {
        background: var(--bg-box);
        border: 1px solid var(--border);
        padding: 16px 24px;
    }

    .item-label, .class-label {
        font-size: 9px;
        font-weight: 600;
        letter-spacing: 2px;
        color: var(--text-muted);
        margin-bottom: 4px;
    }

    .item-number {
        font-size: 24px;
        font-weight: 700;
        font-family: 'IBM Plex Mono', monospace;
        color: var(--gold);
    }

    .class-value {
        font-size: 18px;
        font-weight: 600;
        letter-spacing: 2px;
        color: var(--text);
    }

    .doc-content {
        /* Content styles handled globally */
    }

    .footer {
        background: var(--bg-panel);
        border-top: 1px solid var(--border);
        padding: 16px 32px;
        margin-top: 48px;
    }

    .footer-content {
        display: flex;
        justify-content: space-between;
        font-size: 10px;
        font-family: 'IBM Plex Mono', monospace;
        color: var(--text-dark);
        letter-spacing: 1px;
    }
</style>
